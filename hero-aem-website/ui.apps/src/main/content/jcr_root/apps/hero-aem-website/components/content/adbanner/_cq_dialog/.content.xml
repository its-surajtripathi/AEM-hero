<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
      jcr:primaryType="nt:unstructured"
      jcr:title="Ad Banner Component"
      sling:resourceType="cq/gui/components/authoring/dialog"
      helpPath="https://www.adobe.com/go/aem_cmp_tableofcontents_v1">
    <content
        granite:class="cmp-toc__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured"
                    sling:hideChildren="[asset,metadata,styletab]">
                    <container
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Image"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <background
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                fieldDescription="Select Styling for Background"
                                                fieldLabel="Select Background Styling"
                                                name="./background">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <xoom-blue
                                                        jcr:primaryType="nt:unstructured"
                                                        text="XOOM Blue"
                                                        value="xoom-blue"/>
                                                    <blue
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Blue"
                                                        value="blue-bg"/>
                                                    <darkblue
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Dark Blue"
                                                        value="dark-blue-bg"/>
                                                    <bluegradient
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Blue Gradient"
                                                        value="blue-gradient-bg"/>
                                                    <lightred
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Light Red"
                                                        value="red-bg"/>
                                                    <darkred
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Dark Red"
                                                        value="red-theme no-mob-img-hide"/>
                                                    <redgradient
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Red Gradient"
                                                        value="red-gradient-bg"/>
                                                    <yellow
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Yellow"
                                                        value="yellow-bg"/>
                                                    <grey
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Grey"
                                                        value="grey-bg"/>
                                                    <lightskin
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Light Skin"
                                                        value=""/>
                                                </items>
                                            </background>
                                            <bookinghrsicon
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                fieldDescription="Icon for Booking Data"
                                                fieldLabel="Configure Icon for Booking Hours"
                                                rootPath="/content/dam/hero-aem-website"
                                                name="./bookinghrsicon"/>
                                            <file
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="{Boolean}false"
                                                fieldLabel="Image Asset"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./fileReference"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                name="./file"
                                                rootPath="/content/dam"
                                                title="Upload Image Asset"/>
                                            <imageAlt
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Image Alternate Text"
                                                fieldLabel="Alt Text"
                                                name="./alt"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </container>
                    <textConfigs
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Text"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <headline
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                fieldLabel="Title"
                                                required="{Boolean}true"
                                                name="./headline"
                                                useFixedInlineToolbar="{Boolean}true">
                                            <rtePlugins
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceSuperType="/apps/hero-aem-website/components/content/text/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text/rtePlugins"/>
                                            <uiSettings
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceSuperType="/apps/hero-aem-website/components/content/text/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text/uiSettings"/>
                                            </headline>
                                            <bookingdata
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Enter Booking Data"
                                                fieldLabel="Booking Hours"
                                                name="./bookingdata"
                                                emptyText="100+ Booking in the last 24 hours"/>
                                            <blacktheme
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    checked="{Boolean}false"
                                                    fieldDescription="Enable the checkbox to show this section in black background"
                                                    name="./blacktheme"
                                                    text="Show in Black Background?"
                                                    uncheckedValue="false"
                                                    value="true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </textConfigs>
                    <buttonconfigs
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Buttons"
                        sling:resourceType="granite/ui/components/coral/foundation/accordion"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <button1
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Button 1"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <button1Style
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                        fieldLabel="Select Background Style"
                                        name="./bgStyle1">
                                        <items jcr:primaryType="nt:unstructured">
                                            <nofill
                                                jcr:primaryType="nt:unstructured"
                                                text="No Fill"
                                                checked="{Boolean}true"
                                                value="btn-white"/>
                                            <bgfill
                                                jcr:primaryType="nt:unstructured"
                                                text="Background Filled"
                                                value="btn-red-gradient"/>
                                        </items>
                                    </button1Style>
                                    <button1label
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Label"
                                        name="./button1label"/>
                                    <type1
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                        fieldLabel="Select Link Type"
                                        name="./type1">
                                        <items jcr:primaryType="nt:unstructured">
                                            <modal1
                                                jcr:primaryType="nt:unstructured"
                                                text="Modal"
                                                checked="{Boolean}true"
                                                value="modal1"/>
                                            <url1
                                                jcr:primaryType="nt:unstructured"
                                                text="External URL"
                                                value="url1"/>
                                        </items>
                                    </type1>
                                    <linkTo1
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        fieldLabel="Redirection URL"
                                        name="./linkTo1"
                                        rootPath="/content"/>
                                </items>
                            </button1>
                            <button2
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Button 2"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                            <items jcr:primaryType="nt:unstructured">
                                <button2Style
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                    fieldLabel="Select Background Style"
                                    name="./bgStyle2">
                                    <items jcr:primaryType="nt:unstructured">
                                        <nofill
                                            jcr:primaryType="nt:unstructured"
                                            text="No Fill"
                                            value="btn-white"/>
                                        <bgfill
                                            jcr:primaryType="nt:unstructured"
                                            text="Background Filled"
                                            value="btn-red-gradient"/>
                                    </items>
                                </button2Style>
                                <button2label
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Button Label"
                                    name="./button2label"/>
                                <type2
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                    fieldLabel="Select Link Type"
                                    name="./type2">
                                    <items jcr:primaryType="nt:unstructured">
                                        <modal2
                                            jcr:primaryType="nt:unstructured"
                                            text="Modal"
                                            value="modal2"/>
                                        <url2
                                            jcr:primaryType="nt:unstructured"
                                            text="External URL"
                                            value="url2"/>
                                    </items>
                                </type2>
                                <linkTo2
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldLabel="Redirection URL"
                                    name="./linkTo2"
                                    rootPath="/content"/>
                            </items>
                            </button2>
                            <emidetails
                                jcr:primaryType="nt:unstructured"
                                jcr:title="EMI Details"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <text
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Text"
                                        name="./text"
                                        emptyText="EMI starting from"/>
                                    <amount
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Enter Booking Data"
                                        fieldLabel="EMI Amount"
                                        name="./amount"/>
                                    <tooltipicon
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                        fieldDescription="Path for Loan Exclamation Icon"
                                        fieldLabel="Configure Exclamation Icon"
                                        rootPath="/content/dam/hero-aem-website"
                                        name="./tooltipicon"/>
                                </items>
                            </emidetails>
                        </items>
                    </buttonconfigs>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>