<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Text"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem_cmp_text_v2"
    trackingFeature="core-components:text:v2">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        granite:class="cq-RichText-FixedColumn-column"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <text
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                name="./text"
                                                useFixedInlineToolbar="{Boolean}true">
                                                <rtePlugins jcr:primaryType="nt:unstructured">
                                                    <format
                                                        jcr:primaryType="nt:unstructured"
                                                        features="bold,italic"/>
                                                    <justify
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                    <links
                                                        jcr:primaryType="nt:unstructured"
                                                        features="modifylink,unlink"/>
                                                    <lists
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                    <misctools
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                    <paraformat
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*">
                                                        <formats jcr:primaryType="nt:unstructured">
                                                            <default_p
                                                                jcr:primaryType="nt:unstructured"
                                                                description="Paragraph"
                                                                tag="p"/>
                                                            <default_h1
                                                                jcr:primaryType="nt:unstructured"
                                                                description="Heading 1"
                                                                tag="h1"/>
                                                            <default_h2
                                                                jcr:primaryType="nt:unstructured"
                                                                description="Heading 2"
                                                                tag="h2"/>
                                                            <default_h3
                                                                jcr:primaryType="nt:unstructured"
                                                                description="Heading 3"
                                                                tag="h3"/>
                                                            <default_h4
                                                                jcr:primaryType="nt:unstructured"
                                                                description="Heading 4"
                                                                tag="h4"/>
                                                            <default_h5
                                                                jcr:primaryType="nt:unstructured"
                                                                description="Heading 5"
                                                                tag="h5"/>
                                                            <default_h6
                                                                jcr:primaryType="nt:unstructured"
                                                                description="Heading 6"
                                                                tag="h6"/>
                                                            <default_blockquote
                                                                jcr:primaryType="nt:unstructured"
                                                                description="Quote"
                                                                tag="blockquote"/>
                                                            <default_pre
                                                                jcr:primaryType="nt:unstructured"
                                                                description="Preformatted"
                                                                tag="pre"/>
                                                            <span
                                                                jcr:primaryType="nt:unstructured"
                                                                description="Span"
                                                                tag="span"/>
                                                        </formats>
                                                    </paraformat>
                                                    <tracklinks
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                    <styles
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*">
                                                        <styles jcr:primaryType="nt:unstructured">
                                                            <font-35
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="font-size-35"
                                                                text="Font size 35"/>
                                                            <font-20
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="fs-20"
                                                                text="Font size 20"/>
                                                            <font-24
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="fs-24"
                                                                text="Font size 24"/>
                                                            <tab-home-heading
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="explore-products-h3"
                                                                text="Tab home heading"/>
                                                            <newtag
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="badge"
                                                                text="New Tag"/>
                                                            <btn-white
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="btn btn-white"
                                                                text="White Button"/>
                                                            <btn-red
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="btn btn-red-gradient"
                                                                text="Red Button"/>
                                                            <feature-span
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="feature-span"
                                                                text="Feature Span"/>
                                                            <font-italic
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="font-italic"
                                                                text="Font Italic"/>
                                                            <text-danger
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="text-danger"
                                                                text="Text Danger"/>
                                                            <sub-text
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="sub-text"
                                                                text="Sub Text"/>
                                                            <text-uppercase
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="text-uppercase"
                                                                text="Uppercase Text"/>
                                                            <mb-4
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="mb-md-4"
                                                                text="Margin bottom 4"/>
                                                            <customerreview
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="common-h3"
                                                                text="Customer review heading"/>
                                                            <exteme
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="exteme"
                                                                text="XTREME"/>
                                                            <r160
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="r160"
                                                                text="R160"/>
                                                            <specification
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="specification ml-md-0 ml-2"
                                                                text="Campaign Specification"/>
                                                            <thanks-msg
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="thanks-msg"
                                                                text="Thanks heading"/>
                                                            <privacypolicy
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="d-inline"
                                                                text="Privacy Policy"/>
                                                            <decreasefont
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="decrease-font"
                                                                text="Decrease Stat Font"/>
                                                            <text
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="text"
                                                                text="Text"/>
                                                            <readmore
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="read-more"
                                                                text="Read More Link for other pages"/>
                                                            <hidecontent
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="collapse hide-content-mobile"
                                                                text="Hide Content under Read More"/>
                                                            <readmoremobile
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="btn-read read-more-mobile"
                                                                text="Read More link to hide content"/>
                                                            <readlessmobile
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="btn-read d-none read-less-mobile"
                                                                text="Read Less link to hide content"/>
                                                            <desktoptitle
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="d-none d-md-block"
                                                                text="Heading in Desktop"/>
                                                            <mobiletitle
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="d-block d-md-none chairman-headline mobile"
                                                                text="Heading in Mobile"/>
                                                            <profiles-heading
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="profileheading"
                                                                text="Profiles Heading "/>
                                                            <profiles-paragraph
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="profileparagraph"
                                                                text="Profiles Paragraph "/>
                                                            <profiles-subpara
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="profilesubpara"
                                                                text="Profiles Sub Paragraph"/>
                                                            <milestones-heading
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="headmile"
                                                                text="Milestones Banner Heading "/>
                                                            <red-links
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="red-link"
                                                                text="Red Link"/>
                                                            <contact-metrology
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="contact-metrology"
                                                                text="contact metrology"/>
                                                            <spacer
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="spacer"
                                                                text="spacer"/>
                                                            <hero-app
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="hero-app"
                                                                text="No Border Buttons"/>
                                                            <pop-up-title
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="info-popup-body-title"
                                                                text="Pop up title"/>
                                                            <pop-up-subtitle
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="info-popup-body-txt"
                                                                text="Pop up subtitle"/>
                                                            <good-life
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="good-life"
                                                                text="Good Life Text"/>
                                                            <point-redemption
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="end_text1"
                                                                text="Point Redemption End Text"/>
                                                            <banner-big-font
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="xClan-banner-insur-yrs"
                                                                text="Banner - Bold font"/>
                                                            <membershipmainheading
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="heading2_align"
                                                                text="Membership Plan-Heading"/>
                                                            <membershipheading1
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="heading1_align"
                                                                text="Membership Plan-Heading 1"/>
                                                            <membershipsubheading
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="plans_head2"
                                                                text="Membership Plan-Sub-Heading"/>
                                                            <booknowservice
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="pop-text-wrap"
                                                                text="Book Now Service Text"/>
                                                            <voucher-description
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="voucher-description"
                                                                text="Voucher Description"/>
                                                        </styles>
                                                    </styles>
                                                    <sourceedit
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                    <table
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*">
                                                        <hiddenHeaderConfig
                                                            jcr:primaryType="nt:unstructured"
                                                            hiddenHeaderClassName="cq-wcm-foundation-aria-visuallyhidden"
                                                            hiddenHeaderEditingCSS="cq-RichText-hiddenHeader--editing"/>
                                                    </table>
                                                </rtePlugins>
                                                <uiSettings jcr:primaryType="nt:unstructured">
                                                    <cui jcr:primaryType="nt:unstructured">
                                                        <inline
                                                            jcr:primaryType="nt:unstructured"
                                                            toolbar="[format#bold,format#italic,format#underline,#justify,#lists,links#modifylink,links#unlink,#paraformat,#styles,misctools#sourceedit,table#createoredit]">
                                                            <popovers jcr:primaryType="nt:unstructured">
                                                                <justify
                                                                    jcr:primaryType="nt:unstructured"
                                                                    items="[justify#justifyleft,justify#justifycenter,justify#justifyright,justify#justifyjustify]"
                                                                    ref="justify"/>
                                                                <lists
                                                                    jcr:primaryType="nt:unstructured"
                                                                    items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
                                                                    ref="lists"/>
                                                                <paraformat
                                                                    jcr:primaryType="nt:unstructured"
                                                                    items="paraformat:getFormats:paraformat-pulldown"
                                                                    ref="paraformat"/>
                                                                <styles
                                                                    jcr:primaryType="nt:unstructured"
                                                                    items="styles:getStyles:styles-pulldown"
                                                                    ref="styles"/>
                                                            </popovers>
                                                        </inline>
                                                        <tableEditOptions
                                                            jcr:primaryType="nt:unstructured"
                                                            toolbar="[table#insertcolumn-before,table#insertcolumn-after,table#removecolumn,-,table#insertrow-before,table#insertrow-after,table#removerow,-,table#mergecells-right,table#mergecells-down,table#mergecells,table#splitcell-horizontal,table#splitcell-vertical,-,table#selectrow,table#selectcolumn,-,table#ensureparagraph,-,table#modifytableandcell,table#removetable,-,undo#undo,undo#redo,-,table#exitTableEditing,-]"/>
                                                    </cui>
                                                </uiSettings>
                                            </text>
                                            <id
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="HTML ID attribute to apply to the component."
                                                fieldLabel="ID"
                                                name="./id"/>
                                            <type
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="{Boolean}false"
                                                fieldDescription="Enable the checkbox to add the fade in effects to the text component"
                                                name="./isanimation"
                                                text="Enable Animation?"
                                                uncheckedValue="false"
                                                value="true"/>
                                            <animationoptions
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                class="cq-dialog-dropdown-showhide"
                                                cq-dialog-dropdown-showhide-target=".variation-show-hide"
                                                fieldLabel="Select Animation Type"
                                                name="./animationtype">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <fade-up
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Fade up"
                                                        value="fade-up"/>
                                                    <fade-left-miss
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Fade Left-Mission section"
                                                        value="fade-left-miss"/>
                                                    <fade-right-miss
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Fade Right-Mission Section"
                                                        value="fade-right-miss"/>
                                                    <fade-left-who
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Fade Left-Who we are section"
                                                        value="fade-left-who"/>
                                                    <fade-right-who
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Fade Right-Who we are section"
                                                        value="fade-right-who"/>
                                                </items>
                                            </animationoptions>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                    <styletab
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/mnt/overlay/cq/gui/components/authoring/dialog/style/tab_edit/styletab"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
