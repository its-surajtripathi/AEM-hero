<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Form Field Component"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <fieldType
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                class="cq-dialog-dropdown-showhide"
                                                cq-dialog-dropdown-showhide-target=".show-hide-textfield"
                                                fieldLabel="Select Input Type"
                                                name="./type"
                                                required="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <text
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Text"
                                                        value="text"/>
                                                    <button
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Button"
                                                        value="button"/>
                                                    <checkbox
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Checkbox"
                                                        value="checkbox"/>
                                                    <date
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Date"
                                                        value="date"/>
                                                    <email
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Email"
                                                        value="email"/>
                                                    <file
                                                        jcr:primaryType="nt:unstructured"
                                                        text="File"
                                                        value="file"/>
                                                    <hidden
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Hidden"
                                                        value="hidden"/>
                                                    <number
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Number"
                                                        value="number"/>
                                                    <password
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Password"
                                                        value="password"/>
                                                    <tel
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Tel"
                                                        value="tel"/>
                                                    <dropdown
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Dropdown"
                                                        value="dropdown"/>
                                                    <radio
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Radio Buttons"
                                                        value="radio"/>
                                                </items>
                                            </fieldType>
                                            <additionalclass
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Additional class"
                                                name="./addnclass"/>
                                            <label
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Label"
                                                name="./label"/>
                                            <isRequired
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                name="./isRequired"
                                                text="Make the field mandatory"
                                                uncheckedValue="false"
                                                value="true"/>
                                            <isdisabled
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                name="./isReadOnly"
                                                text="Make the field Read Only"
                                                value="readonly"/>
                                            <requiredMessage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Required Message"
                                                name="./requiredMessage"/>
                                            <id
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="ID"
                                                name="./id"/>
                                            <placeholder
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Placeholder"
                                                name="./placeholder"/>
                                            <name
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Name"
                                                name="./name"/>
                                            <validationMessage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Validation Message"
                                                name="./validationMessage"/>
                                            <regex
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Regex Pattern"
                                                name="./regex"/>
                                            <regexValidation
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Regex Validation Message"
                                                name="./regexValidation"/>
                                            <minLength
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                fieldLabel="Minimum Length"
                                                name="./minLength"/>
                                            <maxLength
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                fieldLabel="Maximum Length"
                                                name="./maxLength"/>
                                            <genericError
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Generic Error Message"
                                                name="./genericError"/>
                                            <dropdown
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/container"
                                                class="show-hide-textfield"
                                                showhidetargetvalue="dropdown,checkbox,radio">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <multitext
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        composite="{Boolean}true"
                                                        fieldLabel="Multi text">
                                                        <field
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                                            name="./multitext">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <key
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                    fieldLabel="Enter Key"
                                                                    name="./key"/>
                                                                <value
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                    fieldLabel="Enter Value"
                                                                    name="./value"/>
                                                                <isChecked
					                                                jcr:primaryType="nt:unstructured"
					                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
					                                                name="./isChecked"
					                                                text="Select this by default"
					                                                uncheckedValue="false"
					                                                value="true"/>
                                                            </items>
                                                        </field>
                                                    </multitext>
                                                </items>
                                            </dropdown>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
