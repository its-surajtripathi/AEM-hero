<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Generic Heading"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            margin="{Boolean}false"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <variation
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/select"
						class="cq-dialog-dropdown-showhide"
                        cq-dialog-dropdown-showhide-target=".show-hide-textfield"
                        fieldLabel="Background"
                        name="./variation">
                        <items jcr:primaryType="nt:unstructured">
                            <fill
                                jcr:primaryType="nt:unstructured"
                                text="Fill"
                                value="with-background"/>
                            <nofill
                                jcr:primaryType="nt:unstructured"
                                text="No Fill"
                                value=""/>
                            <bgimage
                                    jcr:primaryType="nt:unstructured"
                                    text="Image"
                                    value="bgimage"/>
							<icon
                                jcr:primaryType="nt:unstructured"
                                text="With Icon"
                                value="icon"/>
                        </items>
                    </variation>
                    <heading
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Enter Heading"
                        name="./heading"/>
                    <file
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                            allowUpload="{Boolean}false"
                            fieldLabel="Image Asset"
                            fileNameParameter="./fileName"
                            fileReferenceParameter="./fileReference"
                            mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                            name="./file"
                            rootPath="/content/dam"
                            title="Upload Image Asset"/>
                    <fontcolor
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                            fieldLabel="Pick Font Color"
                            name="./fontcolor"/>
                    <addtnclass
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Additional Classes for heading"
                        name="./addtnclass"/>
                    <fontsize
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/select"
                        fieldLabel="Select Fontsize"
                        name="./fontsize">
                        <items jcr:primaryType="nt:unstructured">
                            <heading2
                                jcr:primaryType="nt:unstructured"
                                text="heading 2"
                                value="h2"/>
                            <heading1
                                jcr:primaryType="nt:unstructured"
                                text="heading 1"
                                value="h1"/>
                            <heading3
                                jcr:primaryType="nt:unstructured"
                                text="heading 3"
                                value="h3"/>
                            <heading4
                                jcr:primaryType="nt:unstructured"
                                text="heading 4"
                                value="h4"/>
                            <heading5
                                jcr:primaryType="nt:unstructured"
                                text="heading 5"
                                value="h5"/>
                            <heading6
                                jcr:primaryType="nt:unstructured"
                                text="heading 6"
                                value="h6"/>
                        </items>
                    </fontsize>
                    <fontstyle
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/select"
                        fieldLabel="Select standerd font style"
                        name="./fontstyle">
                        <items jcr:primaryType="nt:unstructured">
                            <headingdefault
                                jcr:primaryType="nt:unstructured"
                                text="default"
                                value="default"/>
                            <headingh1
                                jcr:primaryType="nt:unstructured"
                                text="h1 standerd style"
                                value="h1-std"/>
                            <headingh2
                                jcr:primaryType="nt:unstructured"
                                text="h2 standerd style"
                                value="h2-std"/>
                            <headingh3
                                jcr:primaryType="nt:unstructured"
                                text="h3 standerd style"
                                value="h3-std"/>
                        </items>
                    </fontstyle>
					<withIcon
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container"
                        class="show-hide-textfield"
                        showhidetargetvalue="icon">
                        <items jcr:primaryType="nt:unstructured">
                            <headingIcon
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                fieldLabel="Select Heading Icon"
                                name="./headingIcon"
                                rootPath="/content/dam/hero-aem-website"/>
                            <arrowIcon
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                fieldLabel="Select Arrow Icon"
                                name="./arrowIcon"
                                rootPath="/content/dam/hero-aem-website"/>
                            <link
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/pathfield"
                                fieldLabel="Enter Arrow Link"
                                name="./link"
                                rootPath="/content"/>
                        </items>
                    </withIcon>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
