<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Tab"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[hero-aem-website.multifield]"
    helpPath="https://www.adobe.com/go/aem_cmp_tableofcontents_v1">
    <content
        granite:class="cmp-toc__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Tabs"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <variation
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                class="cq-dialog-dropdown-showhide"
                                                cq-dialog-dropdown-showhide-target=".show-hide-textfield"
                                                fieldLabel="Select Variation"
                                                name="./variation"
                                                required="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <normal
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Normal page"
                                                        value="pcban"/>
                                                    <categorypage
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Product Gallery"
                                                        value="categorypage"/>
                                                </items>
                                            </variation>
                                            <productbanner
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/container"
                                                class="show-hide-textfield"
                                                showhidetargetvalue="categorypage">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <heading
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="Enter Heading"
                                                        name="./headingtext"/>
                                                    <subheading
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="Enter Sub Heading"
                                                        name="./subheadingtext"/>
                                                    <backgroundvideo
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                        fieldLabel="Background Video Path"
                                                        name="./backprodvideo"
                                                        rootPath="/content/dam/hero-aem-website"/>
                                                    <backgroundimage
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                        fieldLabel="Background Image Path"
                                                        name="./backgroundimage"
                                                        rootPath="/content/dam/hero-aem-website"/>
                                                    <well
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/well"
                                                        fieldLabel="Bike Details">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <quicklinkdetails
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                                composite="{Boolean}true"
                                                                fieldDescription="Specifications"
                                                                fieldLabel="Bike Details"
                                                                required="{Boolean}false">
                                                                <field
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                                    name="./bikedetails">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <bikeimage
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                                            fieldLabel="Provide Bike Path Image"
                                                                            name="./bikeimage"
                                                                            useFixedInlineToolbar="{Boolean}true"/>
                                                                        <biketitle
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                                            fieldLabel="Enter Bike Title"
                                                                            name="./biketitle"
                                                                            useFixedInlineToolbar="{Boolean}true">
                                                                            <rtePlugins
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceSuperType="/apps/hero-aem-website/components/content/text/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text/rtePlugins"/>
                                                                            <uiSettings
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceSuperType="/apps/hero-aem-website/components/content/text/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text/uiSettings"/>
                                                                            <htmlRules jcr:primaryType="nt:unstructured">
                                                                                <blockHandling
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    removeSingleParagraphContainer="{Boolean}true"/>
                                                                            </htmlRules>
                                                                        </biketitle>
                                                                        <bikesubtitle
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                            fieldLabel="Enter Subheading Text"
                                                                            name="./bikesubtitle"/>
                                                                        <quicktext
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                            fieldLabel="Quick Text"
                                                                            name="./quicktext"/>
                                                                        <button2
                                                                            jcr:primaryType="nt:unstructured"
                                                                            jcr:title="Button 2"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                            <items jcr:primaryType="nt:unstructured">
                                                                                <type2
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                                                                    fieldLabel="Select Link Type"
                                                                                    name="./type2">
                                                                                    <items jcr:primaryType="nt:unstructured">
                                                                                        <modal2
                                                                                            jcr:primaryType="nt:unstructured"
                                                                                            text="Modal"
                                                                                            value="modal2"/>
                                                                                    </items>
                                                                                </type2>
                                                                                <linkTo2
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                                    fieldLabel="Redirection URL"
                                                                                    name="./linkTo2"
                                                                                    rootPath="/content"/>
                                                                            </items>
                                                                        </button2>
                                                                    </items>
                                                                </field>
                                                            </quicklinkdetails>
                                                        </items>
                                                    </well>
                                                </items>
                                            </productbanner>
                                            <normal
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/container"
                                                class="show-hide-textfield"
                                                showhidetargetvalue="pcban">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <backgroundvideo
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                        fieldLabel="Background Video Path"
                                                        name="./prodvideo"
                                                        rootPath="/content/dam/hero-aem-website"/>
                                                    <backgroundimage
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                        fieldLabel="Background Image Path"
                                                        name="./prodimage"
                                                        rootPath="/content/dam/hero-aem-website"/>
                                                    <explorelogo
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                        fieldLabel="Logo Image Path"
                                                        name="./prodlogo"
                                                        rootPath="/content/dam/hero-aem-website"/>
                                                    <file
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                        fieldLabel="Image Path"
                                                        fileNameParameter="./fileName"
                                                        fileReferenceParameter="./fileReference"
                                                        multiple="{Boolean}false"
                                                        name="./file"
                                                        rootPath="/content/dam/hero-aem-website"
                                                        title="Upload Image Asset"
                                                        useHTML5="{Boolean}true"/>
                                                    <ctabutton1_x0020_label
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="CTA Button 1- Label"
                                                        name="./cta1label"/>
                                                    <ctabutton1_x0020_link
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="CTA Button 1- Link"
                                                        name="./cta1link"/>
                                                    <ctabuttonlinktype1
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                                        fieldLabel="CTA Button 1- Link Type"
                                                        name="./urltype1">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <url1
                                                                jcr:primaryType="nt:unstructured"
                                                                text="URL"
                                                                value="url"/>
                                                            <modal1
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Modal"
                                                                value="modal"/>
                                                        </items>
                                                    </ctabuttonlinktype1>
                                                    <ctabutton2_x0020_label
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="CTA Button 2- Label"
                                                        name="./cta2label"/>
                                                    <ctabutton2_x0020_link
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="CTA Button 2 - Link"
                                                        name="./cta2link"/>
                                                    <downimage
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                        fieldLabel="Down Arrow Image Path"
                                                        name="./downimage"
                                                        rootPath="/content/dam/hero-aem-website"/>
                                                    <well
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/well"
                                                        fieldLabel="QuickLink Details">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <quicklinkdetails
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                                composite="{Boolean}true"
                                                                fieldDescription="Specifications"
                                                                fieldLabel="Specification Details"
                                                                required="{Boolean}false">
                                                                <field
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                                    name="./specdetails">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <specification
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                                            fieldLabel="Enter Specification Text"
                                                                            name="./specification"
                                                                            useFixedInlineToolbar="{Boolean}true">
                                                                            <rtePlugins
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceSuperType="/apps/hero-aem-website/components/content/text/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text/rtePlugins"/>
                                                                            <uiSettings
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceSuperType="/apps/hero-aem-website/components/content/text/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text/uiSettings"/>
                                                                            <htmlRules jcr:primaryType="nt:unstructured">
                                                                                <blockHandling
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    removeSingleParagraphContainer="{Boolean}true"/>
                                                                            </htmlRules>
                                                                        </specification>
                                                                        <value
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                            fieldLabel="Value Text"
                                                                            name="./valuetext"/>
                                                                    </items>
                                                                </field>
                                                            </quicklinkdetails>
                                                        </items>
                                                    </well>
                                                </items>
                                            </normal>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </tabs>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
