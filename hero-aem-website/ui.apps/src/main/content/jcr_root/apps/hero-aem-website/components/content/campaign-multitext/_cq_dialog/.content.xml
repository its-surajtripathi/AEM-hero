<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Multitext Component for Campaign page"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <container
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <container
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <variant
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                                        class="cq-dialog-dropdown-showhide"
                                                        cq-dialog-dropdown-showhide-target=".show-hide-textfield"
                                                        fieldDescription="Select Tab Variant."
                                                        fieldLabel="Variant"
                                                        name="./layoutvariation">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <default
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Default"
                                                                value="default"/>
                                                            <xoompage
                                                                jcr:primaryType="nt:unstructured"
                                                                text="XOOM Page"
                                                                value="xoom"/>
                                                        </items>
                                                    </variant>
                                                    <default
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/container"
                                                        class="show-hide-textfield"
                                                        showhidetargetvalue="default">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <columns
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <column
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <lowercase
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                                checked="{Boolean}false"
                                                                                fieldDescription="Check to make text case sensitive"
                                                                                name="./lowercase"
                                                                                text="Check to make text case sensitive"
                                                                                uncheckedValue="false"
                                                                                value="true"/>
                                                                            <color
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                                checked="{Boolean}false"
                                                                                fieldDescription="Check to make the background color as grey"
                                                                                name="./campaignBackground"
                                                                                text="Check to make the background color as grey"
                                                                                uncheckedValue="false"
                                                                                value="true"/>
                                                                            <multitext
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                                                composite="{Boolean}true"
                                                                                fieldLabel="Multi text">
                                                                                <field
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                                                    name="./multitext">
                                                                                    <items jcr:primaryType="nt:unstructured">
                                                                                        <title
                                                                                            jcr:primaryType="nt:unstructured"
                                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                                            fieldLabel="Enter Text"
                                                                                            name="./title"/>
                                                                                        <image
                                                                                            jcr:primaryType="nt:unstructured"
                                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                                                            fieldLabel="Enter Image path"
                                                                                            name="./image"
                                                                                            rootPath="/content/dam"/>
                                                                                        <imagealt
                                                                                            jcr:primaryType="nt:unstructured"
                                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                                            fieldLabel="Enter Image Alt Text"
                                                                                            name="./imagealt"/>
                                                                                    </items>
                                                                                </field>
                                                                            </multitext>
                                                                        </items>
                                                                    </column>
                                                                </items>
                                                            </columns>
                                                        </items>
                                                    </default>
                                                    <xoompage
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/container"
                                                        class="show-hide-textfield"
                                                        showhidetargetvalue="xoom">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <columns
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <column
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <maintitle
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                                fieldLabel="Enter Heading"
                                                                                name="./campaignXoomMainTitle"/>
                                                                            <multitext
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                                                composite="{Boolean}true"
                                                                                fieldLabel="Multi text">
                                                                                <field
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                                                    name="./multitextforxoom">
                                                                                    <items jcr:primaryType="nt:unstructured">
                                                                                        <subtitle
                                                                                            jcr:primaryType="nt:unstructured"
                                                                                            sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                                                            fieldLabel="Enter Subtitle"
                                                                                            name="./campaignXoomSubTitle"
                                                                                            useFixedInlineToolbar="{Boolean}true">
                                                                                            <rtePlugins
                                                                                                jcr:primaryType="nt:unstructured"
                                                                                                sling:resourceSuperType="/apps/hero-aem-website/components/content/text/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text/rtePlugins"/>
                                                                                            <uiSettings
                                                                                                jcr:primaryType="nt:unstructured"
                                                                                                sling:resourceSuperType="/apps/hero-aem-website/components/content/text/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text/uiSettings"/>
                                                                                            <htmlRules jcr:primaryType="nt:unstructured">
                                                                                                <blockHandling
                                                                                                    jcr:primaryType="nt:unstructured"
                                                                                                    removeSingleParagraphContainer="{Boolean}true"/>
                                                                                            </htmlRules>
                                                                                        </subtitle>
                                                                                        <text
                                                                                            jcr:primaryType="nt:unstructured"
                                                                                            sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                                                            fieldLabel="Enter text content"
                                                                                            name="./campaignXoomTextContent"
                                                                                            useFixedInlineToolbar="{Boolean}true">
                                                                                            <rtePlugins
                                                                                                jcr:primaryType="nt:unstructured"
                                                                                                sling:resourceSuperType="/apps/hero-aem-website/components/content/text/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text/rtePlugins"/>
                                                                                            <uiSettings
                                                                                                jcr:primaryType="nt:unstructured"
                                                                                                sling:resourceSuperType="/apps/hero-aem-website/components/content/text/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text/uiSettings"/>
                                                                                            <htmlRules jcr:primaryType="nt:unstructured">
                                                                                                <blockHandling
                                                                                                    jcr:primaryType="nt:unstructured"
                                                                                                    removeSingleParagraphContainer="{Boolean}true"/>
                                                                                            </htmlRules>
                                                                                        </text>
                                                                                    </items>
                                                                                </field>
                                                                            </multitext>
                                                                        </items>
                                                                    </column>
                                                                </items>
                                                            </columns>
                                                        </items>
                                                    </xoompage>
                                                </items>
                                            </container>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </container>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
