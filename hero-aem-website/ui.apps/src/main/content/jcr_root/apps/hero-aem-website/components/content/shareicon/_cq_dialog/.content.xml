<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Share Icon"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <variation
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/select"
                        fieldLabel="Select Variation"
                        name="./variation">
                        <items jcr:primaryType="nt:unstructured">
                        	<none
                                jcr:primaryType="nt:unstructured"
                                text="None"
                                value="none"/>
                            <motorcycle
                                jcr:primaryType="nt:unstructured"
                                text="motorcycle Page"
                                value="motorcycle"/>
                            <scooter
                                jcr:primaryType="nt:unstructured"
                                text="Scooter Page"
                                value="scooter"/>
                        </items>
                    </variation>
                    <icon
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/pathfield"
                        fieldLabel="Share Icon "
                        name="./icon"
                        rootPath="/content/dam/hero-aem-website"/>
                    <emailsub
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        fieldLabel="Email Subject"
                        name="./emailSub"/>
                    <title
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                        fieldLabel="Email Body"
                        name="./text">
                    </title>
                    <linkpath
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                            fieldDescription="Enter PDF path"
                            fieldLabel="Configure PDF path"
                            name="./linkpath"
                            rootPath="/content/dam/hero-aem-website"/>
                    <emailicon
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldLabel="Email Icon Link"
                        name="./emailIcon"
                        rootPath="/content"/>
                    <wpicon
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldLabel="Whatsapp Icon Link"
                        name="./wpIcon"
                        rootPath="/content"/>
                    <wptext
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                        fieldLabel="Whatsapp Text"
                        name="./wpText"/>
                    <wplink
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Whatsapp Link"
                        name="./wpLink"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
