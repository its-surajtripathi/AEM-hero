<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="HERO LOGO Image"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                	<type
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="{Boolean}false"
                                                fieldDescription="Not a home page?"
                                                name="./isnothome"
                                                text="Not a Home page?"
                                                uncheckedValue="false"
                                                value="true"/>
                    <logo
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                        fieldLabel="Image asset"
                        fileNameParameter="./logoName"
                        fileReferenceParameter="./logoReference"
                        multiple="{Boolean}false"
                        name="./logo"
                        title="Upload Image Asset"
                        useHTML5="{Boolean}true"/>
                    <logomobile
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                        fieldLabel="Mobile Image asset"
                        fileNameParameter="./logoName"
                        fileReferenceParameter="./logoReferenceMobile"
                        multiple="{Boolean}false"
                        name="./logomobile"
                        title="Upload Image Asset"
                        useHTML5="{Boolean}true"/>
                    <linkto
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/pathfield"
                        fieldLabel="Link To"
                        name="./linkto"/>
                    <altText
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="This is logo alt"
                        fieldLabel="AltText"
                        name="./logoAlt"
                        required="{Boolean}true"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
